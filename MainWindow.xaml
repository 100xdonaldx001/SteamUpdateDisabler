<Window x:Class="SteamManifestToggler.MainWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Title="Steam Update Toggler" Height="650" Width="1500" WindowStartupLocation="CenterScreen">
     <Window.Resources>
        <LinearGradientBrush x:Key="TopBarBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF1C2834" Offset="0"/>
            <GradientStop Color="#FF101823" Offset="1"/>
        </LinearGradientBrush>
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#FF1B2733"/>
            <Setter Property="Foreground" Value="#FFE3F2FD"/>
            <Setter Property="BorderBrush" Value="#FF2F3B4A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="ComboBoxToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="ToggleBorder" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" CornerRadius="0,6,6,0">
                            <Path HorizontalAlignment="Center" VerticalAlignment="Center" Data="M 0 0 L 4 4 L 8 0 Z" Fill="#FFE3F2FD" Width="8" Height="4"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ToggleBorder" Property="Background" Value="#FF2F3B4A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ToggleBorder" Property="Background" Value="#FF37474F"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ToggleBorder" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="FilterComboStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#FF1B2733"/>
            <Setter Property="Foreground" Value="#FFE3F2FD"/>
            <Setter Property="BorderBrush" Value="#FF2F3B4A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#FFE3F2FD"/>
                        <Setter Property="Padding" Value="10,6"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border x:Name="ItemBorder" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="True">
                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="Center" RecognizesAccessKey="True"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsHighlighted" Value="True">
                                            <Setter TargetName="ItemBorder" Property="Background" Value="#FF2F3B4A"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="ItemBorder" Property="Background" Value="#FF2F3B4A"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="ItemBorder" Property="Opacity" Value="0.5"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="BackgroundBorder" Grid.ColumnSpan="2" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6" SnapsToDevicePixels="True"/>
                            <ContentPresenter x:Name="ContentSite" Margin="{TemplateBinding Padding}" VerticalAlignment="Center" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Content="{TemplateBinding SelectionBoxItem}" ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" Focusable="False" RecognizesAccessKey="True"/>
                            <ToggleButton Grid.Column="1" Style="{StaticResource ComboBoxToggleButtonStyle}" Focusable="False" IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}" ClickMode="Press" Background="Transparent" BorderBrush="Transparent"/>
                            <Popup x:Name="Popup" Placement="Bottom" AllowsTransparency="True" Focusable="False" IsOpen="{TemplateBinding IsDropDownOpen}" PopupAnimation="Slide">
                                <Grid MaxHeight="{TemplateBinding MaxDropDownHeight}" MinWidth="{TemplateBinding ActualWidth}">
                                    <Border x:Name="DropDownBorder" Background="#FF121B25" BorderBrush="#FF2F3B4A" BorderThickness="1" CornerRadius="6" SnapsToDevicePixels="True">
                                        <ScrollViewer Margin="0" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" Background="Transparent"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="False">
                                <Setter TargetName="DropDownBorder" Property="MinHeight" Value="0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#FF607D8B"/>
                                <Setter TargetName="BackgroundBorder" Property="Opacity" Value="0.6"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BackgroundBorder" Property="BorderBrush" Value="#FF3A4A5A"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="BackgroundBorder" Property="BorderBrush" Value="#FF3A4A5A"/>
                            </Trigger>
                            <Trigger SourceName="Popup" Property="Popup.IsOpen" Value="True">
                                <Setter TargetName="BackgroundBorder" Property="BorderBrush" Value="#FF3A4A5A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF1E88E5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderBrush" Value="#FF1976D2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF2196F3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF1976D2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="0"/>
        </Style>
    </Window.Resources>
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource TopBarBackground}" CornerRadius="12" Padding="16" Margin="0,0,0,12">
            <Border.Effect>
                <DropShadowEffect Color="#99000000" BlurRadius="18" ShadowDepth="4"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Library Management" FontSize="18" FontWeight="SemiBold" Foreground="#FFE3F2FD"/>
                <Grid Margin="0,12,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Root:" VerticalAlignment="Center" Foreground="#FF90A4AE"/>
                    <TextBox x:Name="RootBox" Grid.Column="2" Style="{StaticResource InputTextBoxStyle}" IsReadOnly="True"/>
                    <TextBlock Grid.Column="2" IsHitTestVisible="False" Text="Steam Root Path" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="DarkGray">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=RootBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <Button x:Name="BtnPickRoot" Grid.Column="4" Content="Select Root…" Style="{StaticResource ActionButtonStyle}" Click="BtnPickRoot_Click" ToolTip="Choose the Steam installation root"/>
                    <Button x:Name="BtnRefresh" Grid.Column="6" Content="Refresh" Style="{StaticResource ActionButtonStyle}" Click="BtnRefresh_Click" ToolTip="Rescan manifests"/>
                    <Button x:Name="BtnRO" Grid.Column="8" Content="Set ReadOnly" Style="{StaticResource ActionButtonStyle}" Background="#FFEF5350" BorderBrush="#FFE53935" Click="BtnRO_Click" ToolTip="Force selected manifests to read-only"/>
                    <Button x:Name="BtnRW" Grid.Column="10" Content="Set Read/Write" Style="{StaticResource ActionButtonStyle}" Background="#FF66BB6A" BorderBrush="#FF43A047" Click="BtnRW_Click" ToolTip="Allow updates for selected manifests"/>
                    <Button x:Name="BtnOpen" Grid.Column="12" Content="Open Folder" Style="{StaticResource ActionButtonStyle}" Background="#FF546E7A" BorderBrush="#FF455A64" Click="BtnOpen_Click" ToolTip="Open the manifest folder for the first selected game"/>
                </Grid>
                <Grid Margin="0,14,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="SearchBox" Grid.Column="0" Style="{StaticResource InputTextBoxStyle}" TextChanged="SearchBox_TextChanged" ToolTip="Filter by name or AppID…"/>
                    <TextBlock Grid.Column="0" IsHitTestVisible="False" Text="Filter by name or AppID…" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="DarkGray">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <ComboBox x:Name="StatusFilter" Grid.Column="2" Style="{StaticResource FilterComboStyle}" SelectionChanged="StatusFilter_SelectionChanged" ToolTip="Filter by manifest status">
                        <ComboBoxItem Content="All Statuses" Tag="All"/>
                        <ComboBoxItem Content="Steam Updates disabled" Tag="ReadOnly"/>
                        <ComboBoxItem Content="Updates allowed" Tag="ReadWrite"/>
                    </ComboBox>
                    <ComboBox x:Name="LibraryFilter" Grid.Column="4" Style="{StaticResource FilterComboStyle}" SelectionChanged="LibraryFilter_SelectionChanged" ToolTip="Filter by Steam library folder"/>
                    <Button Grid.Column="6" Content="Clear Filters" Style="{StaticResource ActionButtonStyle}" Background="#FF394B59" BorderBrush="#FF2D3A45" Click="ClearFilters_Click" ToolTip="Reset all search filters"/>
                </Grid>
                <TextBlock Text="Tip: Double-click a game to toggle its manifest." Margin="0,12,0,0" Foreground="#FF607D8B"/>
            </StackPanel>
        </Border>
 
        <ListView x:Name="GridGames" Grid.Row="1" SelectionMode="Extended" MouseDoubleClick="GridGames_MouseDoubleClick"
                  Background="Transparent" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  ScrollViewer.VerticalScrollBarVisibility="Auto" VirtualizingPanel.IsVirtualizing="True"
                  VirtualizingPanel.VirtualizationMode="Recycling">
            <ListView.Resources>
                <Style TargetType="ListViewItem">
                    <Setter Property="Margin" Value="0,0,0,12"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                </Style>
            </ListView.Resources>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border x:Name="Card" Background="#FF1F1F1F" BorderBrush="#FF2A2A2A" BorderThickness="1" CornerRadius="10"
                            Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Width="96" Height="128" CornerRadius="8" Background="#FF2E2E2E" Grid.Column="0"
                                    BorderBrush="#FF3A3A3A" BorderThickness="1" ClipToBounds="True">
                                <Image Source="{Binding CoverImageSource}" Stretch="UniformToFill"/>
                            </Border>
                            <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Center">
                                <DockPanel LastChildFill="False">
                                    <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="SemiBold"
                                               Foreground="#FFF5F5F5" DockPanel.Dock="Left" TextTrimming="CharacterEllipsis"/>
                                    <Border x:Name="StatusPill" DockPanel.Dock="Right" Padding="8,2" CornerRadius="12"
                                            Background="#FF28A745" Margin="12,0,0,0">
                                        <TextBlock Text="{Binding StatusText}" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="White"/>
                                    </Border>
                                </DockPanel>
                                <TextBlock Text="{Binding AppId, StringFormat=AppID: {0}}" Foreground="#FFB0BEC5" FontSize="13"
                                           Margin="0,6,0,0"/>
                                <TextBlock Text="{Binding ManifestPath}" Foreground="#FF8FA1B3" FontSize="12"
                                           TextWrapping="Wrap" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsReadOnly}" Value="True">
                            <Setter TargetName="StatusPill" Property="Background" Value="#FFDC3545"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}" Value="True">
                            <Setter TargetName="Card" Property="BorderBrush" Value="#FF2D7FF9"/>
                            <Setter TargetName="Card" Property="BorderThickness" Value="2"/>
                            <Setter TargetName="Card" Property="Background" Value="#FF263238"/>
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
 
         <StatusBar Grid.Row="2">
             <StatusBarItem>
                 <TextBlock x:Name="StatusText" Text="Select Steam root to begin…"/>
             </StatusBarItem>
         </StatusBar>
     </Grid>
 </Window>
