<Window x:Class="SteamManifestToggler.MainWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Title="Steam Manifest ReadOnly Toggler (WPF)" Height="650" Width="1050" WindowStartupLocation="CenterScreen">
     <Grid Margin="12">
         <Grid.RowDefinitions>
             <RowDefinition Height="Auto"/>
             <RowDefinition Height="*"/>
             <RowDefinition Height="Auto"/>
         </Grid.RowDefinitions>
 
         <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,8">
             <TextBlock Text="Root:" VerticalAlignment="Center" Margin="0,0,6,0"/>
             <TextBox x:Name="RootBox" Width="380" Height="28" Margin="0,0,6,0" IsReadOnly="True"/>
             <Button x:Name="BtnPickRoot" Content="Select Root…" Width="120" Height="28" Margin="0,0,12,0" Click="BtnPickRoot_Click"/>
             <TextBox x:Name="SearchBox" Width="280" Height="28" Margin="0,0,8,0" VerticalContentAlignment="Center" TextChanged="SearchBox_TextChanged" ToolTip="Filter by name or AppID…"/>
             <Button x:Name="BtnRefresh" Content="Refresh" Width="90" Height="28" Margin="0,0,8,0" Click="BtnRefresh_Click"/>
             <Button x:Name="BtnRO" Content="Set ReadOnly" Width="110" Height="28" Margin="0,0,8,0" Click="BtnRO_Click"/>
             <Button x:Name="BtnRW" Content="Set Read/Write" Width="120" Height="28" Margin="0,0,8,0" Click="BtnRW_Click"/>
             <Button x:Name="BtnOpen" Content="Open Folder" Width="110" Height="28" Click="BtnOpen_Click"/>
         </DockPanel>
 
        <ListView x:Name="GridGames" Grid.Row="1" SelectionMode="Extended" MouseDoubleClick="GridGames_MouseDoubleClick"
                  Background="Transparent" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  ScrollViewer.VerticalScrollBarVisibility="Auto" VirtualizingPanel.IsVirtualizing="True"
                  VirtualizingPanel.VirtualizationMode="Recycling">
            <ListView.Resources>
                <Style TargetType="ListViewItem">
                    <Setter Property="Margin" Value="0,0,0,12"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                </Style>
            </ListView.Resources>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border x:Name="Card" Background="#FF1F1F1F" BorderBrush="#FF2A2A2A" BorderThickness="1" CornerRadius="10"
                            Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Width="96" Height="128" CornerRadius="8" Background="#FF2E2E2E" Grid.Column="0"
                                    BorderBrush="#FF3A3A3A" BorderThickness="1" ClipToBounds="True">
                                <Image Source="{Binding CoverUrl}" Stretch="UniformToFill"/>
                            </Border>
                            <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Center">
                                <DockPanel LastChildFill="False">
                                    <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="SemiBold"
                                               Foreground="#FFF5F5F5" DockPanel.Dock="Left" TextTrimming="CharacterEllipsis"/>
                                    <Border x:Name="StatusPill" DockPanel.Dock="Right" Padding="8,2" CornerRadius="12"
                                            Background="#FF28A745" Margin="12,0,0,0">
                                        <TextBlock Text="{Binding StatusText}" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="White"/>
                                    </Border>
                                </DockPanel>
                                <TextBlock Text="{Binding AppId, StringFormat=AppID: {0}}" Foreground="#FFB0BEC5" FontSize="13"
                                           Margin="0,6,0,0"/>
                                <TextBlock Text="{Binding ManifestPath}" Foreground="#FF8FA1B3" FontSize="12"
                                           TextWrapping="Wrap" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsReadOnly}" Value="True">
                            <Setter TargetName="StatusPill" Property="Background" Value="#FFDC3545"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}" Value="True">
                            <Setter TargetName="Card" Property="BorderBrush" Value="#FF2D7FF9"/>
                            <Setter TargetName="Card" Property="BorderThickness" Value="2"/>
                            <Setter TargetName="Card" Property="Background" Value="#FF263238"/>
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
 
         <StatusBar Grid.Row="2">
             <StatusBarItem>
                 <TextBlock x:Name="StatusText" Text="Select Steam root to begin…"/>
             </StatusBarItem>
         </StatusBar>
     </Grid>
 </Window>
