<Window x:Class="SteamManifestToggler.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Steam Update Toggler – Setup"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        MinWidth="520"
        MinHeight="200">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Welcome! Before we get started, select your Steam installation folder." 
                   TextWrapping="Wrap" Margin="0,0,0,12" FontSize="16"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
            <TextBlock Text="Steam root:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="RootTextBox" Width="340" Height="28" VerticalContentAlignment="Center" TextChanged="RootTextBox_TextChanged"/>
            <Button Content="Browse…" Width="90" Height="28" Margin="8,0,0,0" Click="Browse_Click"/>
        </StackPanel>

        <TextBlock x:Name="ErrorText" Grid.Row="2" Foreground="Tomato" Visibility="Collapsed" TextWrapping="Wrap"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Cancel" Width="90" Height="30" Margin="0,0,8,0" IsCancel="True" Click="Cancel_Click"/>
            <Button x:Name="ContinueButton" Content="Continue" Width="110" Height="30" IsDefault="True" Click="Continue_Click"/>
        </StackPanel>
    </Grid>
</Window>